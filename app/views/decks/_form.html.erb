<%= form_with  model: @deck do |f| %>
  <div class="page-form">
    <p class="page-form__field">
      <%= f.label :name, class: 'page-form__label' %>
      <%= f.text_field :name, placeholder: 'Name', class: 'page-form__input' %>
    </p>
    <%= f.submit (@deck.new_record? ? 'Create' : 'Save'), class: 'page-form__button main-button' %>
  </div>
<% end %>