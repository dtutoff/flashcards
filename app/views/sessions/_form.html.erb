<%= form_with  url: session_path do |f| %>
  <div class="page-form">
    <p class="page-form__field">
      <%= f.label :email, class: 'page-form__label' %>
      <%= f.text_field :email, placeholder: 'Enter your email address here', class: 'page-form__input' %>
    </p>
    <p class="page-form__field">
      <%= f.label :password, class: 'page-form__label'%>
      <%= f.password_field :password, class: 'page-form__input' %>
    </p>
    <p class="page-form__field page-form__field--checkbox">
      <%= f.label :remember_me, class: 'page-form__label' do %>
        <%= f.check_box :remember_me, class: 'page-form__checkbox', value: '1' %>
        <span>Remember me on this computer</span>
      <% end %>
    </p>

    <%= f.submit 'Sing In', class: 'page-form__button main-button' %>
  </div>
<% end %>