<%= form_with model: [@deck, @card] do |f| %>
  <div class="page-form">
    <p class="page-form__field">
      <%= f.label :front_side, class: 'page-form__label' %>
      <%= f.text_field :front_side, placeholder: 'Front side', class: 'page-form__input' %>
    </p>
    <p class="page-form__field">
      <%= f.label :back_side, class: 'page-form__label' %>
      <%= f.text_field :back_side, placeholder: 'Back side', class: 'page-form__input' %>
    </p>
    <%= f.submit 'Create', class: 'page-form__button main-button' %>
  </div>
<% end %>